{
  "name": "boss-pos",
  "version": "1.0.1",
  "description": "Boss POS - Point of Sale System",
  "private": true,
  "main": "main.js",
  "author": "Boss POS",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-start": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && npm run copy-standalone && electron-builder",
    "copy-standalone": "node scripts/copy-standalone.js",
    "dist": "npm run electron-build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.3",
    "chart.js": "^4.5.0",
    "electron-updater": "^6.6.2",
    "escpos": "^3.0.0-alpha.6",
    "escpos-network": "^3.0.0-alpha.5",
    "escpos-usb": "^3.0.0-alpha.4",
    "fast-xml-parser": "^5.3.3",
    "jose": "^6.1.2",
    "next": "^15.4.8",
    "node-thermal-printer": "^4.5.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-simple-keyboard": "^3.8.137",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "9.39.2",
    "eslint-config-next": "16.0.10",
    "tailwindcss": "^4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.boss.pos",
    "productName": "Boss POS",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*"
    ],
    "extraResources": [
      "standalone/**/*",
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "portable": {
      "artifactName": "BossPOS.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "MuhittinTanoba",
      "repo": "boss-pos"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MuhittinTanoba/boss-pos.git"
  }
}